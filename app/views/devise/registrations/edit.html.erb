<div class="container" style="padding: 40px;">
  <div class="hf-section">
    <h3>Account settings</h3>
    <div class="card" style="margin-bottom: 20px;">
      <div class="card-body">
        <div class="d-flex justify-content-between w-100">
          <span>Your SIN: <strong class="text-muted"><code><%= current_customer.sin %></code></strong></span>
          <span>Registration date/time: <strong class="text-muted"><%= current_customer.registration_date.strftime("%Y %B %d at %H:%m:%S") %></strong></span>
      </div>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
      <div class="row">
        <div class="col-8">
          <p><strong>Basic settings</strong></p>
          <div class="form-group">
            <%= f.label :full_name, 'Your name' %>
            <%= f.text_field :full_name, class: 'form-control', placeholder: 'How should we call you?', autocomplete: 'off' %>
            <small class="form-text text-muted">This will be visible to employees when making a reservation</small>
          </div>

          <div class="form-group">
            <%= f.label :password, 'Change your password' %>
            <div class="input-group">
              <%= f.password_field :password, class: 'form-control', placeholder: 'Enter new password' %>
              <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm new password' %>
            </div>
          </div>

          <p><strong>Your address</strong></p>

          <div class="form-row">
            <div class="form-group col-md-4">
              <%= f.label :street_number, class: 'sr-only' %>
              <%= f.number_field :street_number, class: 'form-control', placeholder: 'Street number' %>
            </div>
            <div class="form-group col-md-8">
              <%= f.label :street_name, class: 'sr-only' %>
              <%= f.text_field :street_name, class: 'form-control', placeholder: 'Street name' %>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-3">
              <%= f.label :city, class: 'sr-only' %>
              <%= f.text_field :city, class: 'form-control', placeholder: 'City' %>
            </div>
            <div class="form-group col-md-3">
              <%= f.label :province_state, class: 'sr-only' %>
              <%= f.text_field :province_state, class: 'form-control', placeholder: 'Province' %>
            </div>
            <div class="form-group col-md-3">
              <%= f.label :postal_code, class: 'sr-only' %>
              <%= f.text_field :postal_code, class: 'form-control', placeholder: 'Postal Code' %>
            </div>
            <div class="form-group col-md-3">
              <%= f.label :country, class: 'sr-only' %>
              <%= f.text_field :country, class: 'form-control', placeholder: 'Country' %>
            </div>
          </div>

          <div style="padding-top: 30px;">
            <%= f.submit 'Update my account', class: 'btn btn-block btn-sm btn-info' %>
          </div>
      </div>

      <div class="col-4 d-inline-block">
        <strong>Profile picture</strong>
        <div class="edit-thumb thumbnail">
          <p class="text-muted">Your current profile picture</p>
          <%= image_tag(current_customer.avatar_url, alt: current_customer.full_name) %>
          <%# avatar_tag(size: 200) %>
          <%# f.file_field :avatar %>
        </div>
      </div>
    </div>
  <% end %>
</div>
